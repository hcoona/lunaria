''
'' Lunaria theme https://lunaria.design/
''
'' Author = "Shuai Zhang
''

!$THEME = "@_name@"

''
'' Colors
''

!$BGCOLOR = "@vivid@"
!$FGCOLOR = "@fg@"

!$WHITE = "@white@"
!$LIGHT_GRAY = "@lightGray"
!$MEDIUM_GRAY = "@mediumGray"
!$DARK_GRAY = "@darkGray@"
!$BLACK = "@black@"

' 0xBF = 75%
' 0x7F = 50%

!$RED = "@vividRed@BF"
!$RED_LIGHT = "@vividRed@7F"
!$RED_DARK = "@vividRed@"

!$YELLOW = "@vividYellow@BF"
!$YELLOW_LIGHT = "@vividYellow@7F"
!$YELLOW_DARK = "@vividYellow@"

!$GREEN = "@vividGreen@BF"
!$GREEN_LIGHT = "@vividGreen@7F"
!$GREEN_DARK = "@vividGreen@"

!$BLUE = "@vividBlue@BF"
!$BLUE_LIGHT = "@vividBlue@7F"
!$BLUE_DARK = "@vividBlue@"

!$VIOLET = "@vividViolet@BF"
!$VIOLET_LIGHT = "@vividViolet@7F"
!$VIOLET_DARK = "@vividViolet@"

!$MAGENTA = "@vividMagenta@BF"
!$MAGENTA_LIGHT = "@vividMagenta@7F"
!$MAGENTA_DARK = "@vividMagenta@"

' Choose 2 most frequent colors
!$PRIMARY = $BLUE
!$PRIMARY_LIGHT = $BLUE_LIGHT
!$PRIMARY_DARK = $BLUE_DARK
!$SECONDARY = $MAGENTA
!$SECONDARY_LIGHT = $MAGENTA_LIGHT
!$SECONDARY_DARK = $MAGENTA_DARK

!$SUCCESS = $BLUE
!$INFO = $GREEN
!$WARNING = $YELLOW
!$DANGER = $RED

!procedure $success($msg)
  <font color=$SUCCESS><b>$msg
!endprocedure

!procedure $warning($msg)
  <font color=$WARNING><b>$msg
!endprocedure

!procedure $failure($msg)
  <font color=$DANGER><b>$msg
!endprocedure

!procedure $primary_scheme()
  FontColor $FGCOLOR
  BorderColor $BLUE
  BackgroundColor $BLUE_LIGHT
!endprocedure

''
'' Global Default Values
''
skinparam backgroundColor $BGCOLOR
skinparam useBetaStyle false

skinparam defaultFontName       "等距更纱黑体 Slab SC"
skinparam defaultFontSize       12
skinparam dpi                   163
skinparam shadowing             false
skinparam roundcorner           8
skinparam ParticipantPadding    40
skinparam BoxPadding            40
skinparam Padding               5
skinparam ArrowColor            $DARK_GRAY

skinparam stereotype {
  CBackgroundColor $MAGENTA_LIGHT
  CBorderColor     $MAGENTA
  ABackgroundColor $RED_LIGHT
  ABorderColor     $RED
  IBackgroundColor $VIOLET_LIGHT
  IBorderColor     $VIOLET
  EBackgroundColor $YELLOW_LIGHT
  EBorderColor     $YELLOW
  NBackgroundColor $GREEN_LIGHT
  NBorderColor     $GREEN
}

skinparam title {
  FontColor         $PRIMARY_DARK
  BorderColor       $SECONDARY_DARK
  FontSize          20
  BorderRoundCorner 8
  BorderThickness   1
  BackgroundColor   $SECONDARY_LIGHT-$SECONDARY
}

skinparam legend {
  BackgroundColor $SECONDARY
  BorderColor     $SECONDARY_DARK
  FontColor       $FGCOLOR
}

